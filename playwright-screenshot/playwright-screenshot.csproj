<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>playwright_screenshot</RootNamespace>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
	  <CopyPlaywrightSentinelToOutputDirectory>true</CopyPlaywrightSentinelToOutputDirectory>
  </PropertyGroup>

  <ItemGroup>
	<PackageReference Include="Microsoft.Playwright" Version="1.57.0" />
	<PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.15.1" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="10.1.0" />
  </ItemGroup>

	<PropertyGroup>
		<PlaywrightPlatform>linux</PlaywrightPlatform>
	</PropertyGroup>
</Project>
